<script>
    var editor1 = new RichTextEditor("#div_editor1");
    $(".js-example-tokenizer").select2({
    tags: true,
    tokenSeparators: [',', ' '],
    placeholder: "Add Tags",
    allowClear: true
})
$("#file-1").fileinput({
        theme: 'fa5',
        uploadUrl: '#', // you must set a valid URL here else you will get an error
        allowedFileExtensions: ['jpg', 'png', 'gif'],
        overwriteInitial: false,
        maxFileSize: 1000,
        maxFilesNum: 10,
        showRemove:true,
        showUpload:false,
        showUploadStats:false,


        //allowedFileTypes: ['image', 'video', 'flash'],
        slugCallback: function (filename) {
            return filename.replace('(', '_').replace(']', '_');
        }
    }).on('fileselect',function(event, numFiles, label) {

console.log(event.target.files);

});


$("#docs_form").validate({
    rules: {
      title: {
        maxlength: 150,
        required: {

          depends: function () {
            $(this).val($.trim($(this).val()));
            return true;
          }
        },
      },
      type: {
        maxlength: 150,
        required: {
          depends: function () {
            $(this).val($.trim($(this).val()));
            return true;
          }
        },
      },
      tags: {
        required: {
          depends: function () {
            $(this).val($.trim($(this).val()));
            return true;
          }
        }
      },
     

      image: {
        required: !0,
        normalizer: function (value) {
          return $.trim(value);
        }

      }
    },
    messages: {
      mobile: {
        required: "Mobile number is required",
        minlength: "Please enter valid mobile number",
        maxlength: "Please enter valid mobile number"
      },
      name: {
        alpha: "Only hyphen, apostrophe,space and characters are allowed"
      },

    },

    errorClass: "help-block error",
    
    highlight: function (e) {
      $(e).closest(".form-floating").addClass("has-error");
    },
    unhighlight: function (e) {
      $(e).closest(".form-floating").removeClass("has-error");
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element.closest('div.input-group'));
    },
    submitHandler: function (form,event) {
     event.preventDefault()
     const formData = new FormData(event.target);
     console.log({
          
          image:formData.get('image')

        })
      $.ajax({
        method: "POST",
        url: "http://localhost:4000/documentation/",
        data: {
          title:formData.get("title"),
          type: formData.get("type"),
          tags:formData.get('tags'),
          content:formData.get('content'),
          image:formData.get('image')

        },
        success: function (data) {
          $.toast({
            heading: 'Success',
            text: `Your Query Submitted Successfully. Our Team will reach to you soon !!!`,
            showHideTransition: 'slide',
            icon: 'success',
            stack: 2
          })
        },
        error: function (xhr, exception) {
          $.toast({
            heading: 'Warning',
            text: 'Something went wrong !!!',
            showHideTransition: 'slide',
            icon: 'error',
            stack: 2
          })
        }
      })
     

    }

  });


</script>

